[default]
; Where to store the backups
backupdir = <%= @backup_home %>/f3backup

; Number of threads
threads = <%= @threads %>

; Default priority (lower value means higher priority)
priority = 10

; Where to store the logs
logdir = /var/log/f3backup

; Prefix to prepend to the node log file names. Can use python strftime values:
; http://docs.python.org/library/time.html#time.strftime
lognameprefix = <%= @lognameprefix %>

[rdiff-backup]
; Files containing exclusion lists. The global is for all nodes.
; If multiple files are specified, they should be comma separated.
; Some tags can be used:
;   %server% : hostname
global-exclude-file = <%= @rdiff_global_exclude_file %>
exclude-file =
user = <%= @rdiff_user %>
path = <%= @rdiff_path %>

; Optional extra parameters for rdiff-backup
extra-parameters = <%= @rdiff_extra_parameters %>
